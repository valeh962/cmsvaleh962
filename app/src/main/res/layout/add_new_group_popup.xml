<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="265dp"
    android:background="@drawable/layout_bg"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/n_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/screen_background_light_transparent">

            <RelativeLayout

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddd1">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:text="Select subject"
                    android:textSize="17dp" />

                <View
                    android:id="@+id/divvv4"
                    style="@style/Divider"
                    android:layout_below="@id/textView45" />

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divvv4"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner4"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:text="Select teacher for group:"
                    android:textSize="17dp" />

                <View
                    android:id="@+id/divvv5"
                    style="@style/Divider"
                    android:layout_below="@id/textView50" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divvv5"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:spinnerMode="dialog" />

                <View
                    android:id="@+id/ddd2"
                    style="@style/Divider"
                    android:layout_below="@+id/spinner3"
                    android:background="@drawable/n_back" />

                <TextView
                    android:id="@+id/crt_b"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/ddd2"
                    android:gravity="center"
                    android:text="Create"
                    android:background="?attr/selectableItemBackground"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:id="@+id/ddd1"
                style="@style/Divider"
                android:layout_below="@+id/textView54"
                android:background="@drawable/n_back" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Select student to add..."
                android:textColor="#fff"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>