<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/n_back"
    tools:context=".Main.Fragment.Groups.GroupDetails.GroupMemberDetails.GroupMemberDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_light_transparent">

        <LinearLayout
            android:layout_below="@id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_bg"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/layout_bg"
                        android:paddingLeft="10dp"
                        android:text="Name  Surname"
                        android:textColor="#90000000"
                        android:textStyle="italic"
                        android:typeface="sans" />

                    <View style="@style/Divider" />

                    <EditText
                        android:id="@+id/ed1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bg"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="Valeh"
                        android:textColor="#90000000" />

                    <EditText
                        android:id="@+id/ed2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bg"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="Asadov"
                        android:textColor="#90000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_bg"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/layout_bg"
                        android:paddingLeft="10dp"
                        android:text="Communication"
                        android:textColor="#90000000"
                        android:textStyle="italic"
                        android:typeface="sans" />

                    <View style="@style/Divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/divdivdic"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_local_phone_black_24dp" />

                        <EditText
                            android:id="@+id/ed3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/layout_bg"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:text="valeh569@gmsil.com"
                            android:textColor="#90000000" />

                        <View
                            android:id="@+id/divdivdic"
                            style="@style/DividerH"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_toLeftOf="@+id/imageView17" />

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_email_black_24dp" />
                    </RelativeLayout>

                    <View
                        style="@style/Divider"
                        android:id="@+id/view"
                        android:layout_width="match_parent" />

                    <EditText
                        android:id="@+id/ed4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bg"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="(+994) 516203310"
                        android:textColor="#90000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_bg"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/layout_bg"
                        android:paddingLeft="10dp"
                        android:text="Address"
                        android:textColor="#90000000"
                        android:textStyle="italic"
                        android:typeface="sans" />

                    <View
                        style="@style/Divider"
                        android:layout_width="wrap_content" />

                    <EditText
                        android:id="@+id/ed5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bg"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="Azerbaijan, Baku"
                        android:textColor="#90000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_bg"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/layout_bg"
                        android:paddingLeft="10dp"
                        android:text="University, faculty and grade"
                        android:textColor="#90000000"
                        android:textStyle="italic"
                        android:typeface="sans" />

                    <View style="@style/Divider" />

                    <EditText
                        android:id="@+id/ed6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bg"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="Azerbaijan, Baku"
                        android:textColor="#90000000" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">


            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_circle_icons_profile" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>